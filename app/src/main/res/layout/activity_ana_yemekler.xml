            android:id="@+id/urfa_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/urfa"
            android:scaleType="centerCrop"
            android:contentDescription="Urfa Kebabı Görseli"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Urfa Kebabı - Baharatsız kıyma ile hazırlanan hafif kebap."
            android:textSize="20sp"
            android:paddingTop="8dp"
            android:paddingBottom="4dp" />

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fiyat: 240 TL"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <Button android:id="@+id/btn_add_urfa"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Sepete Ekle"
            android:layout_gravity="center"
            android:paddingBottom="16dp" />


        <!-- Karışık Makarna -->
        <ImageView
            android:id="@+id/karisik_makarna_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/karisik_makarna"
            android:scaleType="centerCrop"
            android:contentDescription="Karışık Makarna Görseli"
            android:layout_marginBottom="16dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Karışık Makarna - Çeşitli sebzeler ve soslarla zenginleştirilmiş makarna."
            android:textSize="20sp"
            android:paddingTop="8dp"
            android:paddingBottom="4dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fiyat: 160 TL"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingBottom="8dp" />
        <Button
            android:id="@+id/btn_add_karisik_makarna"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Sepete Ekle"
            android:layout_gravity="center"
            android:paddingBottom="16dp" />

        <!-- Tavuklu Makarna -->
