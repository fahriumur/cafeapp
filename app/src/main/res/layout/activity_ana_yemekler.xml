            android:id="@+id/btn_add_tavuklu_makarna"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Sepete Ekle"
            android:layout_gravity="center"
            android:paddingBottom="16dp" />

        <!-- Lahmacun -->
        <ImageView
            android:id="@+id/lahmacun_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/lahmacun"
            android:scaleType="centerCrop"
            android:contentDescription="Lahmacun Görseli"
            android:layout_marginBottom="16dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lahmacun - İnce hamur üzerine baharatlı kıymalı harç."
            android:textSize="20sp"
            android:paddingTop="8dp"
            android:paddingBottom="4dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fiyat: 100 TL"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingBottom="8dp" />
        <Button
            android:id="@+id/btn_add_lahmacun"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Sepete Ekle"
            android:layout_gravity="center"
            android:paddingBottom="16dp" />

        <!-- Pide -->
        <ImageView
            android:id="@+id/pide_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/pide"
            android:scaleType="centerCrop"
            android:contentDescription="Pide Görseli"
            android:layout_marginBottom="16dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pide - Çeşitli malzemelerle hazırlanan geleneksel pide."
            android:textSize="20sp"
            android:paddingTop="8dp"
            android:paddingBottom="4dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fiyat: 120 TL"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingBottom="8dp" />
        <Button
            android:id="@+id/btn_add_pide"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Sepete Ekle"
            android:layout_gravity="center"
            android:paddingBottom="16dp" />

        <!-- Hamburger -->
        <ImageView
            android:id="@+id/hamburger_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/hamburger"
            android:scaleType="centerCrop"
            android:contentDescription="Hamburger Görseli"
            android:layout_marginBottom="16dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hamburger - Et köftesi, sebzeler ve soslarla hazırlanmış."
            android:textSize="20sp"
            android:paddingTop="8dp"
            android:paddingBottom="4dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fiyat: 150 TL"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingBottom="8dp" />
        <Button
            android:id="@+id/btn_add_hamburger"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Sepete Ekle"
            android:layout_gravity="center"
            android:paddingBottom="16dp" />

        <!-- Pizza -->
        <ImageView
            android:id="@+id/pizza_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/pizza"
            android:scaleType="centerCrop"
            android:contentDescription="Pizza Görseli"
            android:layout_marginBottom="16dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pizza - Çeşitli malzemelerle hazırlanmış pizza."
            android:textSize="20sp"
            android:paddingTop="8dp"
            android:paddingBottom="4dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fiyat: 200 TL"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingBottom="8dp" />
        <Button
            android:id="@+id/btn_add_pizza"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Sepete Ekle"
            android:layout_gravity="center"
            android:paddingBottom="16dp" />

        <!-- Et Döner -->
        <ImageView
            android:id="@+id/et_doner_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/et_doner"
            android:scaleType="centerCrop"
            android:contentDescription="Et Döner Görseli"
            android:layout_marginBottom="16dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Et Döner - Geleneksel döner eti."
            android:textSize="20sp"
            android:paddingTop="8dp"
            android:paddingBottom="4dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fiyat: 180 TL"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingBottom="8dp" />
