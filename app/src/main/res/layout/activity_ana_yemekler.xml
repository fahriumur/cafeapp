            android:id="@+id/tavuklu_makarna_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/tavuklu_makarna"
            android:scaleType="centerCrop"
            android:contentDescription="Tavuklu Makarna Görseli"
            android:layout_marginBottom="16dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tavuklu Makarna - Tavuk ve soslarla zenginleştirilmiş makarna."
