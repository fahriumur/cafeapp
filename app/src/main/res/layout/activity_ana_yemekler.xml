
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ana Yemekler"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:paddingBottom="16dp" />

        <!-- Dolma -->
        <ImageView
            android:id="@+id/dolma_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/dolma"
            android:scaleType="centerCrop"
            android:contentDescription="Dolma Görseli"
            android:layout_marginBottom="16dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dolma - Taze sebzelerle doldurulmuş dolma."
            android:textSize="20sp"
            android:paddingTop="8dp"
            android:paddingBottom="4dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fiyat: 180 TL"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingBottom="8dp" />
        <Button
            android:id="@+id/btn_add_dolma"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Sepete Ekle"
            android:layout_gravity="center"
            android:paddingBottom="16dp" />

        <!-- Pilav -->
        <ImageView
            android:id="@+id/pilav_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/pilav"
            android:scaleType="centerCrop"
            android:contentDescription="Pilav Görseli"
            android:layout_marginBottom="16dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pilav - Taze sebzelerle hazırlanmış pilav."
            android:textSize="20sp"
            android:paddingTop="8dp"
            android:paddingBottom="4dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fiyat: 150 TL"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingBottom="8dp" />
        <Button
            android:id="@+id/btn_add_pilav"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Sepete Ekle"
            android:layout_gravity="center"
            android:paddingBottom="16dp" />

        <!-- Mantı -->
        <ImageView
            android:id="@+id/manti_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/manti"
            android:scaleType="centerCrop"
            android:contentDescription="Mantı Görseli"
            android:layout_marginBottom="16dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mantı - Yoğurtlu sos ile servis edilen geleneksel mantı."
            android:textSize="20sp"
            android:paddingTop="8dp"
            android:paddingBottom="4dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fiyat: 220 TL"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingBottom="8dp" />
        <Button
            android:id="@+id/btn_add_manti"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Sepete Ekle"
            android:layout_gravity="center"
            android:paddingBottom="16dp" />

        <!-- Musakka -->
        <ImageView
            android:id="@+id/musakka_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/musakka"
            android:scaleType="centerCrop"
            android:contentDescription="Musakka Görseli"
            android:layout_marginBottom="16dp" />
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Musakka - Patlıcan, kıyma ve domates soslu musakka."
            android:textSize="20sp"
            android:paddingTop="8dp"
            android:paddingBottom="4dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fiyat: 190 TL"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingBottom="8dp" />
        <Button
            android:id="@+id/btn_add_musakka"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Sepete Ekle"
            android:layout_gravity="center"
            android:paddingBottom="16dp" />

        <!-- İmam Bayıldı -->
        <ImageView
            android:id="@+id/imam_bayildi_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/imam_bayildi"
            android:scaleType="centerCrop"
            android:contentDescription="İmam Bayıldı Görseli"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="İmam Bayıldı - Zeytinyağlı patlıcan yemeği."
            android:textSize="20sp"
            android:paddingTop="8dp"
            android:paddingBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fiyat: 210 TL"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <Button android:id="@+id/btn_add_imam_bayildi"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Sepete Ekle"
            android:layout_gravity="center"
            android:paddingBottom="16dp" />

        <!-- Karışık Izgara -->
        <ImageView
            android:id="@+id/karisik_izgara_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/karisik_izgara"
            android:scaleType="centerCrop"
            android:contentDescription="Karışık Izgara Görseli"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Karışık Izgara - Çeşitli etlerin ızgarada pişirilmiş hali."
            android:textSize="20sp"
            android:paddingTop="8dp"
            android:paddingBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fiyat: 300 TL"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <Button
            android:id="@+id/btn_add_karisik_izgara"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Sepete Ekle"
            android:layout_gravity="center"
            android:paddingBottom="16dp" />

        <!-- Adana Kebabı -->
        <ImageView android:id="@+id/adana_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/adana"
            android:scaleType="centerCrop"
            android:contentDescription="Adana Kebabı Görseli"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adana Kebabı - Baharatlı kıyma ile hazırlanan lezzetli kebap."
